{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "C compile",
            "type": "shell",
            "command": "gcc",
            "args": [
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}",
                "${file}"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            }
        },
        {
            "label": "C compile and run",
            "type": "shell",
            "command": "sh",
            "args": [
                "-c",
                "gcc -o '${fileDirname}/${fileBasenameNoExtension}' '${file}' && '${fileDirname}/${fileBasenameNoExtension}' < '${workspaceFolder}/input.txt' > '${workspaceFolder}/output.txt' && rm -f '${fileDirname}/${fileBasenameNoExtension}'"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}

