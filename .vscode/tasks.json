{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Compile and run",
			"type": "shell",
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"windows": {
				"command": "cmd",
				"args": [
					"/C",
					"copy \"${file}\" \"${workspaceFolder}\\jspwTest.cpp\" && g++ jspwTest.cpp -o jspwTest && jspwTest < input.txt > output.txt && del jspwTest.exe && del jspwTest.cpp"
				]
			},
			"linux": {
				"command": "/bin/bash",
				"args": [
					"-c",
					"g++ -std=c++17 -o ${fileBasenameNoExtension} ${file} && ./${fileBasenameNoExtension} < input.txt > output.txt"
				]
			},
			"osx": {
				"command": "/bin/bash",
				"args": [
					"-c",
					"g++ -std=c++17 -o ${fileBasenameNoExtension} ${file} && ./${fileBasenameNoExtension} < input.txt > output.txt"
				]
			},
			"problemMatcher": {
				"owner": "cpp",
				"fileLocation": [
					"relative",
					"${workspaceFolder}"
				],
				"pattern": {
					"regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
					"file": 1,
					"line": 2,
					"column": 3,
					"severity": 4,
					"message": 5
				}
			}
		}
	]
}